<div class="row m-0 ps-5 py-3 fw-light"><p class="fs-3 m-0 p-0">All Inventory Items</p></div>
{{!-- <div class="row m-0 ps-5 pt-5 fw-light"><p class="m-0 p-0"></p></div> --}}

<form class="filter-form card shadow-sm chart mx-5 mt-4">
 <div class="row card-header m-0">
  
  <label for="filter" class="col-sm-2 col-form-label">Sort by:</label>
  
  <div class="col-sm-6">
    <select id="filter" name="filter" class="form-select">
       <option value="category_id">Category</option>
       <option value="item_name">Item Name</option>
       <option value="is_available">Status</option>
    </select>
  </div>
  
  <div class="col-sm-2">
   <button class="btn btn-primary border-0 add-btn" type="submit">Filter Result</button>
  </div>
 
 </div> 
</form>


<div class="card shadow-sm chart mx-5 my-4">
  <div class="row card-header m-0">
    <div class="col-1 border-end" ><p>ID</p></div>
    <div class="col-2 border-end" ><p>Category</p></div>
    <div class="col-2 border-end" ><p>Item Name</p></div>
    <div class="col-3 border-end"><p>Description</p></div>
    <div class="col-2 border-end text-center"><p>Status</p></div>
    <div class="col-2" ><p>Current Borrower</p></div>
  </div>
  {{#each itemData}}
<div class="row m-0 card-body" onclick="window.location='/admin/item/{{id}}'">
      <div class="col-1 text-truncate" ><p>{{id}}</p></div>
      <div class="col-2 text-truncate" ><p>{{category.name}}</p></div>
      <div class="col-2 text-truncate"><p>{{item_name}}</p></div>
      <div class="col-3 text-truncate"><p>{{item_description}}</p></div>
      {{#if is_available}} 
      <div class="col-2 text-center">
          <span
              class="border border-0 py-2 px-3 rounded-pill text-success pill-available"
            >available</span>
        </div>
      {{else}}
        <div class="col-2 text-center" >
          <span
              class="border border-0 py-2 px-2 rounded-pill text-danger pill-unavailable"
            >unavailable</span>
        </div>
        {{#each transactions as |transaction|}}
          {{#if transaction.return_date}}
          {{else}}
           <div class="col-2 text-truncate"><p>{{transaction.employee.first_name}} {{transaction.employee.last_name}}</p></div>
          {{/if}}
        {{/each}}
      {{/if}}
</div>
{{/each}}

</div>

<script src="/js/filter.js"></script>