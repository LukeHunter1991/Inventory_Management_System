<div class="row m-0 ps-5 py-3 fw-light"><p class="fs-3 m-0 p-0">Create New Category</p></div>


<form class="card shadow-sm chart mx-5 my-4 category-form">
 <div class="row card-header m-0">
  <label for="category-name" class="col-4 col-md-4 col-lg-3 col-form-label">Add Category Name</label>
  <div class="col-4 col-md-4 col-lg-6">
   <input class="form-input form-control" type="text" id="category-name" />
  </div>
  <div class="col-3 text-end">
   <button class="btn btn-primary border-0 add-btn" type="submit">Add Category</button>
  </div>
 </div> 
</form>

<div class="card shadow-sm chart mx-5 mt-4">
  <div class="row card-header m-0">
    <div class="col-1 border-end"><p>ID</p></div>
    <div class="col-8 col-lg-9 border-end"><p>Category Name</p></div>
    <div class="col-3 col-lg-2 text-center"><p>Count</p></div>
  </div>
  
  {{#each categoryData}}
  <div class="row m-0 card-body">
      <div class="col-1 text-truncate"><p>{{id}}</p></div>
      <div class="col-8 col-lg-9 text-truncate"><p>{{name}}</p></div>
       <div class="col-3 col-lg-2 text-center"><p>{{count}}</p></div>
  </div>
  {{/each}}

</div>

<script src="/js/category.js"></script>