<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>IMS</title>   
   {{> styles}}
</head>

<body>

 <nav>   
        <div>
        <h4><b>Office Inventory</b></h4>
       </div>
      <div class="d-flex align-self-center">
        {{#if is_admin}}<a>Admin</a>{{else}}<a>Employee</a>{{/if}}
        {{#if logged_in}}   
        <button type="button" class="nav-button btn-no-style btn" id="logout">Logout</button>    
        {{/if}}
      </div>    
  </nav>
  
  <main class="row g-0">
      <aside class="col col-2">
        {{#if is_admin}}
         <div class="d-flex tab">          
          <a href="/api/admin/allitems">All Items</a>
        </div>
         <div class="d-flex tab">          
          <a href="/api/admin">Transactions</a>
        </div>
         <div class="d-flex tab">          
          <a href="/api/admin/viewsummary">Bar Chart</a>
        </div>
         <div class="d-flex tab">          
          <a href="/api/admin/category">Add Category</a>
        </div>
         <div class="d-flex tab">          
          <a href="/api/admin/item">Add Item</a>
        </div>
        {{else}}
         <div class="d-flex tab">
          <a href="/api/employee"> Dashboard</a>
         </div> 
         <div class="d-flex tab">          
          <a href="/api/employee/request">Request</a>
         </div>
         <div class="d-flex tab">         
          <a href="/api/employee//history">History</a>
         </div>
         <div class="d-flex tab">          
          <a href="/api/employee//info">info</a>
         </div>
        {{/if}} 
      </aside>

      <div class="col col-10">
        {{{body}}}
      </div>
    </main>  

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
          crossorigin="anonymous"></script>

          
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
  
</body>

</html>
