<h2>Create New Item</h2>

<form class="form create-item-form">
  <div class="form-group">
    <label for="item-name">Item name:</label>
    <input class="form-input" type="text" id="item-name" />
  </div> 
  <div class="form-group">
    <label for="item-description">Item Description:</label>
    <input class="form-input" type="text" id="item-description" />
  </div> 
  <div class="form-group " style="display: none;">
    <label for="is-available">Is Available</label>        
    <select name="isAvailable" id="is-available" disabled>  
    <option value="true">Yes</option>    
    </select>
  </div>
  <div class="form-group">
    <label for="category-id">Category</label>        
    <select name="category" id="category-id">  

    {{#each categoryData}}
    <option value="{{id}}">{{name}}</option>
    {{/each}}  

    </select>
  </div>

  <div class="form-group">
    <button class="btn btn-primary" type="submit">Add Item</button>
  </div>
 
</form>



<script src="/js/item.js"></script>